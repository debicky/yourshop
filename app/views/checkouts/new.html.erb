<div class="row my-2 d-flex">
  <div class="col-md-6 my-4 order-md-2 border-bottom">
    <% @order_items.each do |item| %>
        <div class="card mb-1">
          <div class="row no-gutters ">
          <div class="col-4">
            <%= image_tag item.product.img, class: "card-img" %>
            <div class="card-img-overlay">
              <h4 class="card-text d-flex justify-content-end"><span class="badge badge-light"><%= item.size.size %></span></h4>
            </div>
          </div>
          <div class="col-8">
            <div class="card-body">
            <h3><%= item.product.title %></h3>
              <h4 class="card-text text-center"><%= item.quantity %> x <%= item.product.price %>$</h4>
            </div>
          </div>
          </div>
        </div>
    <% end %>
    <hr>
      <div class="d-flex justify-content-between">
        <h6>Subtotal </h6>
        <h6 class="font-weight-bold ">$<%= current_order.subtotal %></span>
      </div>
      <div class="d-flex justify-content-between">
        <h6>Shipping </h6>
        <h6 class="font-weight-bold ">$8</span>
      </div>
    <hr>
      <div class="d-flex justify-content-between">
        <h3>Total </h3>
        <h3 class="font-weight-bold pb-2 ">$<%= current_order.subtotal + 8 %></span>
      </div>
  </div>

  <div class="col-md-6 bg-light rounded my-4 border-right border-bottom">
    <h2 class="text-center">Enter your details.</h2>
    <%= render 'form', checkout: @checkout %>
    <%= link_to "Return to cart", your_cart_path, class: "btn btn-outline-secondary btn-sm my-2" %>
  </div>

</div>

