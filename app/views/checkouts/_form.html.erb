<%= bootstrap_form_with(model: checkout, local: true) do |form| %>
  
  <div class="form-group">
    <%= form.text_field :email, class: "form-control", label: "Email (optional*)" %>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.text_field :first_name, class: "form-control" %>
    </div>

    <div class="form-group col-md-6">
      <%= form.text_field :last_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.text_field :address, class: "form-control" %>
  </div>

  <div class="form-row">
    <div class="form-group col-md-6">
      <%= form.text_field :city, class: "form-control" %>
    </div>
    <div class="form-group col-md-6">
      <%= form.text_field :postal_code, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= form.text_field :country, class: "form-control" %>
  </div>


  <div class="form-group">
    <%= form.number_field :phone, class: "form-control", label: "Phone (optional)" %>
  </div>

