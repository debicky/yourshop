
<h1>Categories</h1>

<%= link_to 'New Category', new_category_path, class: "btn btn-info m-2" %>
<div class="row">
<% @categories.each do |category| %>
<div class="col-4">
  <div class="card my-1 " >
      <h5 class="card-header"><%= category.name %></h5>
    <div class="card-body p-2">
        <%= link_to 'Edit', edit_category_path(category), class: "card-link btn btn-primary btn-sm" %>
        <%= link_to 'Destroy', category, method: :delete, class: "card-link btn btn-danger btn-sm", data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
</div>
<% end %>
</div>


