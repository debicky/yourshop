  <div class="d-flex justify-content-center text-uppercase flex-wrap py-3">
  <h4>Your cart</h4>
  </div>

<div class="table-responsive   ">
<table class="table table-hover table-borderless ">
  <caption class="h3 text-dark">Total: <span class="font-weight-bold ">$<%= current_order.subtotal %></span></caption>
  <thead>
    <tr class="border-bottom  ">
      <th scope="col" class="text-center">Product</th>
      <th scope="col" >Price</th>
      <th scope="col">Subtotal</th>
      <th scope="col" class="text-center">Qty&Size</th>
    </tr>
  </thead>
  <tbody>
<% @order_items.each do |item| %>
    <tr class=> 
      <td class="d-flex justify-content-start"><%= image_tag item.product.img, class: "cart-img rounded d-none d-sm-block mr-2" %>
      <div class="mt-5"><%= item.product.title %></div>
      </td>
      <td><%= item.product.price %>$</td>
      <td><%= item.total %>$</td>
      <td>
        <%= form_with model: item do |f| %>
          <%= f.hidden_field :product_id, value: item.product.id %>
          <%= f.select :quantity, options_for_select(1..5, item.quantity), {},  {class: "form-control"} %>
          <%= f.select :size_id, options_from_collection_for_select(Size.all, :id, :size, item.size_id), {}, {class: "form-control my-2"} %>
          <%= f.submit "Update", class: "btn btn-primary btn-sm" %>
          <%= link_to "Remove", item, method: :delete, remote: true, class: "btn btn-danger btn-sm"  %>
        <% end %>
      </td>
    </tr>

  <% end %>
  </tbody>
</table>
</div>
