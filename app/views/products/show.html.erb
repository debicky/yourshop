
<div class="row">
  <div class="col-md-6 d-flex justify-content-center">
    <% if @product.img.attached? %>
        <%= image_tag @product.img, class: "img-fluid rounded" %>
    <% end %>
  </div>
  <div class="col-md-6">
    <h2 class="text-uppercase"><%= @product.title %></h2>
    <h3 class= "font-weight-bold"><%= @product.price %>$</h3>
    <p>
      <%= @product.body %>
    </p>
    <p>
    100% Cotton | Made In Poland | Printed In Warsaw
    </p>
    <hr>
    <%= form_with model: @order_item do |f| %>
      <%= f.hidden_field :product_id, value: @product.id %>
      <%= f.select :quantity, options_for_select(1..5), {},  {class: "form-control"} %>
      <%= f.select :size_id, options_from_collection_for_select(Size.all, :id, :size, @order_item.size_id), {}, {class: "form-control my-2"} %>
      <%= f.submit "Add to cart", class: "btn btn-outline-dark btn-block" %>
    <% end %>


  
  </div>
</div>







