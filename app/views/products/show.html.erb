
<div class="row">
  <div class="col-md-6">
    <% if @product.img.attached? %>
        <%= image_tag @product.img, class: "img-fluid rounded" %>
    <% end %>
  </div>
  <div class="col-md-6">
    <h2 class="text-uppercase"><%= @product.title %></h2>
    <h3 class= "font-weight-bold"><%= @product.price %>$</h3>
    <p>
      <%= @product.body %>
    </p>
    <p>
    100% Cotton | Made In Poland | Printed In Warsaw
    </p>
    <hr>
    <%= form_with model: @order_item do |f| %>
      <%= f.hidden_field :product_id, value: @product.id %>
      <%= f.number_field :quantity, value: 1, min: 1, max: 5, class: "form-control" %>
      <%= f.submit "Add to cart", class: "btn btn-outline-dark my-3" %>
    <% end %>


  
  </div>
</div>







