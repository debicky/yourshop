<%= bootstrap_form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <%= form.text_area :body %>
  </div>

  <div class="field">
    <%= form.text_field :price %>
  </div>

  <div class="field">
    <%= form.file_field :img, multiple: true, direct_upload: true %> %>
  </div>

  <div class="field">
    <%= form.select :category_id, options_from_collection_for_select(Category.all, :id, :name, @product.category_id) %>

  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
